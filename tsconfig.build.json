{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vite.config.ts",
    "**/__tests__/**",
    "**/backup/**",
    "**/backups/**",
    "src/backup/**",
    "src/backups/**"
  ]
}
