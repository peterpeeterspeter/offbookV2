# Build stage
FROM node:20-alpine AS test

WORKDIR /app

# Install system dependencies including canvas requirements
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    pkgconfig \
    pixman-dev \
    cairo-dev \
    pango-dev \
    libjpeg-turbo-dev \
    giflib-dev

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source
COPY . .

# Set environment variables
ENV NODE_ENV=test
ENV NEXT_TELEMETRY_DISABLED=1

# Run tests
CMD ["npm", "run", "test"]

# Coverage stage
FROM test AS coverage

# Run coverage report
CMD ["npm", "run", "coverage"]

# Development stage
FROM test AS development

# Set development environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV NEXT_SKIP_NATIVE_COMPILATION=1

# Start development server
CMD ["npm", "run", "dev"]
